{
  "name": "you/pulsewatch",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.59"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse app -l 5",
    "fix": "php-cs-fixer fix -v"
  }
}